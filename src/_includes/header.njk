<header class="navbar">
  <div class="nav-flex">
    <div class="nav-image">
      <a href="/">
        <img
          src="https://uploads-ssl.webflow.com/5d2e9319dd9e6ad17959c310/5d301297be811839b62a8a13_Asset%2027logo.1.svg"
          alt="nav-image"
/>
